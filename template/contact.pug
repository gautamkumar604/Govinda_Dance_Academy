extends base.pug 

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css
block content
    h1 Contact us
    div.container
        form(action="/contact",method="post" class="contact")
            div.inputBox.inputTextBox
                span Name
                div
                    input(type="text" name="name" id="name" placeholder="Enter your name")
                span DOB
                div
                    input(type="number" name="age" id="age" placeholder="Enter your age")
                span Email
                div
                    input(type="email" name="email" id="email" placeholder="Enter your email")
                span Address
                div 
                    textarea(type="text" name="address" id="address" placeholder="Enter your address..." cols="60" rows="6")
                span Describe
                div 
                    textarea(type="text" name="describe" id="describe" placeholder="Describe your problem..." cols="60" rows="6")
                div.btnbox
                    button.btn-contact
                        | Submit 
                    button.btn-contact
                        | Cancel
        
